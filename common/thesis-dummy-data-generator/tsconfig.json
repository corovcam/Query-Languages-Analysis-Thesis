{
  "compilerOptions": {
    "lib": [ "ESNext" ],
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "declaration": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
